<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.hfad.facebook.Details" android:background="#ff9da1ff">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:src="@drawable/notification"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="38dp"
        android:id="@+id/fimage"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:layout_below="@+id/fimage"
        android:layout_alignLeft="@+id/fimage"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/ftext"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ftext"
        android:layout_marginTop="80dp"
        android:layout_alignLeft="@+id/ftext"
        android:layout_marginLeft="40dp"
        android:textSize="30sp"
        android:id="@+id/ftext1"/>

</RelativeLayout>
