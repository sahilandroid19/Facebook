<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hfad.facebook" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/facebook"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        >
        <activity
            android:name=".FbLogin"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Connected"
            android:label="@string/title_activity_connected"
            android:parentActivityName=".FbLogin" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.hfad.facebook.FbLogin" />
        </activity>
        <activity
            android:name=".LogIn"
            android:label="@string/title_activity_log_in"
            android:parentActivityName=".FbLogin" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.hfad.facebook.FbLogin" />
        </activity>
    </application>

</manifest>
